<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="edit_text_field">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColorHint">@color/editTextColourHint</item>
        <item name="android:textColor">@color/editTextColour</item>
        <item name="android:background">@drawable/edittext_modified_states</item>
    </style>

    <style name="label_text_view">
        <item name="android:textColor">@color/label_colour</item>
        <item name="android:text">@string/app_logo</item>
    </style>

    <style name="goInButton">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/smallTextColour</item>
    </style>
    <style name="timePickBut">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/button_modif_status</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">64dp</item>item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@drawable/authocomplite</item>
    </style>

    <!-- Кастомная AppTheme.Launcher. Устанавливает в качестве фона вашу drawable -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/background</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/toogle_background</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">8dp</item>
    </style>


</resources>
