<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:id="@+id/fragment_return_device">
    <ImageView
            android:scaleType="centerCrop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@mipmap/icons_thanks"
            android:id="@+id/thanksView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"/>

    <include
            layout="@layout/logo_and_info"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="34sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/smallTextColour"
            android:text="@string/inParkBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/thanksView" app:layout_constraintHorizontal_bias="0.5"
            android:id="@+id/youTakeDeviceLabelTv"/>


    <TextView
            android:id="@+id/needToChargeTv"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/smallTextColour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintTop_toBottomOf="@+id/youTakeDeviceLabelTv"/>


</androidx.constraintlayout.widget.ConstraintLayout>