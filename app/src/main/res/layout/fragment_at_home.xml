<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            style="@style/label_text_view"
            android:id="@+id/logoTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="118dp" android:layout_marginStart="118dp" android:layout_marginTop="273dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="117dp"
            android:layout_marginRight="117dp"
            android:layout_marginBottom="275dp" app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/smallTextColour"
            android:text="@string/welcome_home_message"
            android:id="@+id/welcomeMessageTv"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/logoTv"
            app:layout_constraintStart_toStartOf="@+id/logoTv" app:layout_constraintEnd_toEndOf="@+id/logoTv"/>


</androidx.constraintlayout.widget.ConstraintLayout>