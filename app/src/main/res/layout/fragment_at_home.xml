<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            style="@style/label_text_view"
            android:id="@+id/logoTv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="273dp"
            android:layout_marginBottom="275dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="@color/smallTextColour"
            android:text="@string/device_name"
            android:id="@+id/welcomeMessageTv"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/logoTv"
            app:layout_constraintStart_toStartOf="@+id/logoTv" app:layout_constraintEnd_toEndOf="@+id/logoTv"/>
    <Button
            android:text="@string/init"
            android:background="@drawable/round_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/initBut"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/welcomeMessageTv"
            android:layout_marginTop="36dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>