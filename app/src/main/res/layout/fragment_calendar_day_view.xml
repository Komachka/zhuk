<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/calendar_day_fragment"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".calendar_day.CalendarDayFragment"
                                                   android:background="@color/background">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textColor="@color/label_colour"
              android:padding="6dp"
              android:textSize="20sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/dateTV" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"/>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="0dp"
                                               android:layout_height="wrap_content"
                                               android:background="@drawable/round_rectangle"
                                               android:id="@+id/recyclerView"
                                               app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                                               android:layout_marginRight="24dp"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
                                               app:layout_constraintHorizontal_bias="1.0"
                                               android:layout_marginTop="10dp"
                                               app:layout_constraintTop_toBottomOf="@+id/dateTV"
                                               android:layout_marginBottom="8dp"
                                               app:layout_constraintBottom_toTopOf="@+id/view2">
    </androidx.recyclerview.widget.RecyclerView>
    <View android:layout_width="100dp" android:layout_height="20dp" app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
          app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view2"/>


</androidx.constraintlayout.widget.ConstraintLayout>