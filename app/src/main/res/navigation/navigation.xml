<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation" app:startDestination="@id/homeFragment">
    <fragment android:id="@+id/homeFragment" android:name="com.kstorozh.evozhuk.home.HomeFragment"
              android:label="HomeFragment">
        <action android:id="@+id/action_homeFragment_to_loginFragment" app:destination="@id/loginFragment"/>
    </fragment>
    <fragment android:id="@+id/loginFragment" android:name="com.kstorozh.evozhuk.login.LoginFragment"
              android:label="LoginFragment">
        <action android:id="@+id/action_loginFragment_to_chooseTimeFragment" app:destination="@id/chooseTimeFragment"/>
    </fragment>
    <fragment android:id="@+id/chooseTimeFragment" android:name="com.kstorozh.evozhuk.chooseTime.ChooseTimeFragment"
              android:label="ChooseTimeFragment">
        <action android:id="@+id/action_chooseTimeFragment_to_backDeviceFragment"
                app:destination="@id/backDeviceFragment"/>
    </fragment>
    <fragment android:id="@+id/backDeviceFragment" android:name="com.kstorozh.evozhuk.backDevice.BackDeviceFragment"
              android:label="BackDeviceFragment">
        <action android:id="@+id/action_backDeviceFragment_to_loginFragment" app:destination="@id/loginFragment"/>
    </fragment>
</navigation>